<nav class="cyan">
  <div class="nav-wrapper">
    <%= link_to image_tag("logo.png"), root_path, class: "brand-logo center" %>
    <ul id="nav-mobile" class="left hide-on-med-and-down">
      <li><a href="<%= root_path %>"><i class="fa fa-home" aria-hidden="true"></i></a></li>
      <li><%= link_to t(".menu"), "#" %></li>
      <li><%= link_to t(".order"), "#" %></li>
      <li><%= link_to t(".promotion"), "#" %></li>
    </ul>
    <ul id="nav-mobile" class="right hide-on-med-and-down">
      <% unless user_signed_in? %>
        <li><%= link_to t(".signin"), new_user_session_path %></li>
        <li><%= link_to t(".signup"), new_user_registration_path %></li>
      <% else %>
        <li>
          <span id="show" onclick="openNav()"><%= current_user.fullname %></span>
          <div id="mySidenav" class="sidenav">
            <a id="hide" href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a>
            <%= link_to current_user.fullname, "#" %>
            <%= link_to current_user.email, "#" %>
            <%= link_to t(".edit_profile"), edit_user_registration_path %>
          </div>
        </li>
        <li>
          <%= link_to t(".signout"), destroy_user_session_path,
            method: :delete %>
        </li>
      <% end %>
    </ul>
  </div>
</nav>
