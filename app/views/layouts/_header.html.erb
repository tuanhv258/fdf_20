<nav class="cyan">
  <div class="nav-wrapper">
    <%= link_to image_tag("logo.png"), root_path, class: "brand-logo center" %>
    <ul id="nav-mobile" class="left hide-on-med-and-down">
      <li>
        <a href="<%= root_path %>"><i class="fa fa-home" aria-hidden="true"></i></a>
      </li>
      <li><%= link_to t(".menu"), "#" %></li>
      <li><%= link_to t(".order"), "#" %></li>
      <li><%= link_to t(".promotion"), "#" %></li>
